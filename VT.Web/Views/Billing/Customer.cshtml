                           .ClientTemplate("\\#= getImageInfo.apply(this, arguments) \\#").Width(75);
          })
          .DataSource(dataSource => dataSource
                                    .Ajax()
                                    .Model(model => model.Id(p => p.ServiceRecordItemId))

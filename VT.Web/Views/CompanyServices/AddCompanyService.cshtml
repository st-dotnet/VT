@using VT.Common
@model VT.Web.Models.SaveCompanyServiceModel
<div id="modal-add-cs-form" class="modal fade" aria-hidden="true">
    <div class="modal-dialog">
        <form id="saveCompanyServiceForm" action="@Url.Action("SaveCompanyService", "CompanyServices")" class="form-horizontal" method="POST" role="form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="modal-save-cs-title">Add Company Service</h4>
                    <small class="font-bold"></small>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.HiddenFor(x => x.CompanyServiceId)
                            @if (User.IsInRole(UserRoles.SuperAdmin.ToString()))
                            {
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Organization</label>
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(x => x.CompanyId, ViewData["Organizations"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="hr-line-dashed"></div>
                            }
                            else
                            {
                                @Html.HiddenFor(x => x.CompanyId)
                            }
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control small" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Description</label>
                                <div class="col-sm-9">
                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control small" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="btnSaveCompanyService" type="submit" class="btn btn-warning">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

@using VT.Common
@model VT.Web.Models.MessageViewModel

@{
    ViewBag.Title = "CompanyMessage";
    Layout = "~/Views/Shared/LoggedOutLayout.cshtml";
}

 <div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            CREDIT CARD DETAILS
        </h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        CREDIT CARD DETAILS
                    </h5>
                </div>
                <div class="ibox-content">
                    <div class="alert alert-@(Model.IsSuccess ? "success" : "danger")">
                        @Html.Raw(Model.Message)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

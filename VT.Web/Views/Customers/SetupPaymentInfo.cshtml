@model VT.Web.Models.GatewayCustomerViewModel
@{
    ViewBag.Title = "SetupPaymentInfo";
    Layout = "~/Views/Shared/LoggedInLayout.cshtml";
}

@section PageLevelScripts
{
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/iCheck")
    <script src="@Url.Content("~/Scripts/app/customer.js")"></script>
    <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
    
    braintree.setup("@(Model.ClientToken)", "custom", {});
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>CUSTOMERS</h2>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>SETUP PAYMENT INFO</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.HiddenFor(x => x.CustomerId)
                            <input type="hidden" value="@Model.Name" id="OriginalName" name="OriginalName" />
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Name</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control small" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Address</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control small", placeholder = "Address" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.City, new { @class = "form-control small", placeholder = "City" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.State, new { @class = "form-control small", placeholder = "State" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control small", placeholder = "Zip" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Country, new { @class = "form-control small", placeholder = "Country" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Contact</label>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control small", placeholder = "First Name" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.MiddleName, new { @class = "form-control small", placeholder = "Middle Name" })
                                </div>
                                <div class="col-sm-3">
                                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control small", placeholder = "Last Name" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control small", placeholder = "Email" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(x => x.Mobile, new { @class = "form-control small", placeholder = "Mobile" })
                                </div>
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control small", placeholder = "Telephone" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


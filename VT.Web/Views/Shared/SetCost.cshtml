@using VT.Common
@model VT.Web.Models.SetServiceRecordItemCostModel
<div id="set-cost-modal" class="modal fade" aria-hidden="true">
    <div class="modal-dialog">
        <form id="setCostForm" action="@Url.Action("SetCost", "ServiceRecords")" class="form-horizontal" method="POST" role="form">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="modal-org-form-title">Set Cost</h4>
                    <small class="font-bold"></small>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                           <div class="form-group">
                                <label class="col-sm-3 control-label">Description</label>
                                <div class="col-sm-9">
                                    <span id="description"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.HiddenFor(x => x.ServiceRecordItemId)
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Cost of Service</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(x => x.CostOfService, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button id="btnSetCost" type="submit" class="btn btn-warning">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

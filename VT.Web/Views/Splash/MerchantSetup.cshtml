                                            @Html.TextBoxFor(x => x.EntityPhone, new { @class = "form-control small phone", placeholder = "Phone" })

                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                                        <div class="col-lg-12">

                                            @Html.DropDownListFor(x => x.EntityType, ViewData["EntityTypes"] as IEnumerable<SelectListItem>, new { @class = "form-control small" })
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-xs-12 form-group">
                                        <div class="col-lg-12">

                                            @Html.TextBoxFor(x => x.MerchantCategoryCode, new { @class = "form-control small mcc", @Value = defaultMCC })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-4 col-md-4 col-xs-12 form-group">
                                        <div class="col-lg-12">
                                            <label>
                                                Credit Card Statement Descriptor&nbsp;
